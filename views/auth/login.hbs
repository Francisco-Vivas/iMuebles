 <div class="container my-5">
   <div class="card px-5 w-50 mx-auto form-container py-2">
<form action="/auth/login" method="POST" id="form-container">
<h3 class="display-1 my-5 ml-3">Login</h3>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Contraseña</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1">
  </div>
  <button type="submit" class="btn btn-primary">Ingresa a tu cuenta</button>
  <br>
  <p class="account-message">
    ¿No tienes cuenta aún?
    <a href="/auth/signup">Crea tu cuenta</a>
  </p>
  {{#if message}}
   <div class="error-message" style="color:crimson">{{message}}</div>
   {{/if}}
</form>
<div class=" text-center my-5">
  <button id="btn-google" type ="submit" class="btn btn-primary">
  <a href="/auth/google">Continuar con Google</a>
  </button>
</div>
   </div>

 </div>