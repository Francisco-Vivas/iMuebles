<div class="container">
<h1 class="display-1 my-5 ml-3">Mis Productos</h1>
<hr>
{{#if errorMessage}}
<p style="color: crimson">{{errorMessage}}</p>
{{/if}}
{{#if products}}
  <div class="card-deck my-5 row">
    {{#each products}}
      <div class="col-sm-12 col-md-4 d-flex align-items-stretch">
        <div class="card my-2 mx-auto" >
          {{#each imagesURL}}
            <a href="/products/{{_id}}">
              <img src="{{this}}" class="card-img-top d-block w-100 " alt="product-picture" style="height:20rem; object-fit: cover">
            </a>
          {{/each}}
          <div class="card-header text-center">
            <h4 class="card-text">{{name}}</h4>
          </div>
          <div class="d-flex justify-content-around align-items-baseline">
          <div class="card-body w-50" >
            <p class="card-text text-center">
              <small class="text-muted">
                {{category}} </small> </p>

            <p class="card-text text-center">
                 <small class="text-muted">
                {{price}} USD c/u</small> </p>

                 <small class="text-muted">
             <p class="card-text text-center">
                Disponible(s) {{quantity}} </small> </p>
          </div>
          <div class="card-body w-50" >
              <a href="/products/{{_id}}" class="btn rounded-pill btn-light ml-4 btn-anchor" style="object-fit: cover">Ver más</a>
          </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
<h5 class="my-5">No has subido ningún producto pero puedes hacerlo haciendo <a href="/products/new">click aquí</a>.</h5>
{{/if}}
</div>